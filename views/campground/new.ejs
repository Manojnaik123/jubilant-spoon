<% layout('layout/boiler') %> 
    
    <div class="row">
        <h1 class="text-center">new campgrounds</h1>
        <div class="col-6 offset-3">
            <h1> </h1>
            <form action="/campground" method="post" novalidate class="val">
                <div class="mb3">
                    <label class="form-label" for="title">title</label><br>
                    <input class="form-control"type="text" id="title" name="title" required>
                </div>
                <label class="form-label  mt-3" for="price">price</label><br>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">$</span>
                    <input class="form-control" type="text" id="price" name="price" placeholder="0.0" required>
                  </div>
                
                <div class="mb-3">
                    <label class="form-label" for="description">description</label><br>
                    <textarea class="form-control" type="text" id="description" name="description"required></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image url</label><br>
                    <input class="form-control" type="text" id="image" name="image" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">location</label><br>
                    <input class="form-control" type="text" id="location" name="location" required>
                </div>
                <button class="btn btn-success mt-lg-2" >submit</button>
            </form>
        </div>
    
    </div>
  